{
  "private": true,
  "name": "@supolka/design",
  "version": "1.0.0",
  "description": "PostCSS plugin to build a CSS themes with unique supolka charm.",
  "main": "none",
  "author": "Maksim Yaromin <yaromin.m.y@gmail.com>",
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,css"
    }
  },
  "scripts": {
    "format": "prettier **/*.ts --ignore-path .prettierignore --write && git status",
    "lint": "eslint src/**/**.ts --ignore-pattern src/**/*.spec.ts",
    "lint:fix": "yarn lint -- --fix",
    "build": "shx rm -rf dist && node scripts/build.js",
    "build:watch": "npm-watch build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -c .commitlintrc.json -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,json}": [
      "prettier --ignore-path .prettierignore --write"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "12.1.1",
    "@commitlint/config-conventional": "12.1.1",
    "@rollup/plugin-typescript": "8.2.1",
    "@types/lodash": "4.14.168",
    "@types/node": "14.14.41",
    "@typescript-eslint/eslint-plugin": "4.22.0",
    "@typescript-eslint/parser": "4.22.0",
    "eslint": "7.24.0",
    "eslint-config-prettier": "8.2.0",
    "eslint-plugin-import": "2.22.1",
    "husky": "6.0.0",
    "lint-staged": "10.5.4",
    "npm-watch": "0.9.0",
    "prettier": "2.2.1",
    "rollup": "2.45.2",
    "shx": "0.3.3",
    "typescript": "4.2.4"
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "4.0.3",
    "autoprefixer": "10.2.5",
    "html-tags": "3.1.0",
    "lodash": "4.17.21",
    "modern-normalize": "1.0.0",
    "postcss": "8.2.10",
    "postcss-functions": "4.0.2",
    "postcss-js": "3.0.3",
    "postcss-nested": "5.0.5",
    "postcss-selector-parser": "6.0.5",
    "suitcss-base": "5.0.0"
  },
  "peerDependencies": {
    "autoprefixer": "^10.2.5",
    "postcss": "^8.2.10"
  },
  "engines": {
    "node": ">=15.10.0"
  },
  "browserslist": [
    "> 1%",
    "not edge <= 18",
    "not ie 11",
    "not op_mini all"
  ]
}
